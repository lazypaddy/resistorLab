<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableLayout
            android:orientation="horizontal"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/imageViewDummy01"
                android:layout_column="3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:id="@+id/imageView"
                android:src="@drawable/resistor"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/imageViewDummy03"
                android:layout_column="3" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner1"
                    android:layout_column="0" />

                <Spinner
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner2"
                    android:layout_column="1" />

                <Spinner
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner3"
                    android:layout_column="2" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewDummy02"
                    android:layout_column="3" />

                <Spinner
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner4"
                    android:layout_column="4" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/band01"
                    android:id="@+id/textView2"
                    android:layout_column="0"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/band02"
                    android:id="@+id/textView3"
                    android:layout_column="1"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/multi"
                    android:id="@+id/textView4"
                    android:layout_column="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/tolerance"
                    android:id="@+id/textView5"
                    android:layout_column="4" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/imageView2"
                    android:layout_column="3" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tableLayout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/lblResult"
                    android:id="@+id/textView6"
                    android:layout_column="2"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="3"
                    android:layout_below="@+id/textView"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/lblResultToler"
                    android:id="@+id/textView7"
                    android:layout_column="2"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="4"
                    android:layout_below="@+id/textView6"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/lblToleance"
                    android:id="@+id/textView"
                    android:layout_column="3"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="1"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
